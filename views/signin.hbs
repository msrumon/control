<article class='box'>
  {{#if error}}
    <p class='notification is-danger'>{{error}}</p>
  {{/if}}
  <h3 class='has-text-centered'>
    Authenticate Yourself
  </h3>
  <form method='post'>
    <div class='field'>
      <label for='username' class='label'>Username</label>
      <div class='control'>
        <input
          type='text'
          id='username'
          name='username'
          class='input'
          required
          placeholder='"bendover"'
          autocomplete='username'
          autofocus
        />
      </div>
    </div>
    <div class='field'>
      <label for='password' class='label'>Password</label>
      <div class='control'>
        <input
          type='password'
          id='password'
          name='password'
          class='input'
          required
          placeholder='"bendover"'
          autocomplete='current-password'
        />
      </div>
    </div>
    <div class='field'>
      <div class='control'>
        <button
          type='submit'
          class='button is-rounded is-primary'
          name='_csrf'
          value='{{_csrf}}'
        >
          Sign In
        </button>
      </div>
    </div>
  </form>
</article>